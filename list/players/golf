

players=[]


def menu():
  choice=input("Type 1 to add a item, 2 to remove a item and 3 to view the list")
  if choice=="1":
    additem()
  if choice=="2":
    deleteitem()
  elif choice=="3":
    printall()

def additem():
  global players
  item=input("what player do you want to add to the players list?: ")
  players.append(item)
  while len(players) < 12:
      additem()
  else:
      menu()

def deleteitem():
  global players
  item=input("What item do you want to remove? ")
  if item in players:
    players.remove(item)
  else:
    print("Sorry but that item could not be found. ")
  menu()
  
def printall():
  global players
  index=0
  while index < len(players):
    print("The Players are", players[index])
    index=index+1
  menu()
  
menu()
